{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "_components/*": ["./src/components/*"],
      "_constants/*": ["./src/constants/*"],
      "_hooks/*": ["./src/hooks/*"],
      "_icons/*": ["./public/icons/*"],
      "_images/*": ["./public/images/*"],
      "_pages": ["./src/pages"],
      "_pages/*": ["./src/pages/*"],
      "_services/*": ["./src/services/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.css"]
}
