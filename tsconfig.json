{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "_hooks/*": ["./src/hooks/*"],
      "_pages": ["./src/pages"],
      "_pages/*": ["./src/pages/*"],
      "_services/*": ["./src/services/*"],
      "_components/*": ["./src/components/*"],
      "_images/*": ["./public/images/*"],
      "_icons/*": ["./public/icons/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.css"],
  "exclude": ["node_modules"]
}
